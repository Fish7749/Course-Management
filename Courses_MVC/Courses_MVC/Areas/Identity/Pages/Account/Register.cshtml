@page "/Register/"
@model RegisterModel
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


<style>
    .login-form-icon {
        text-align: center;
        font-size: 100px;
        color: #6a6868;
    }
</style>
<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="login-form-icon">
                <i class="fas fa-user-circle"></i>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Birthday"></label>
                    <input type="date" asp-for="Input.Birthday" class="form-control" />
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Gender" class="control-label"></label>
                    <select asp-for="Input.Gender" class="form-control">
                        <option value="Nam">Male</option>
                        <option value="Nữ">Female</option>
                    </select>
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Choose a profile picture</p>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="0" checked />
                    <img class="avatar-icon" src="~/img/icons/avatar1.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="1" />
                    <img class="avatar-icon" src="~/img/icons/avatar2.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="2" />
                    <img class="avatar-icon" src="~/img/icons/avatar3.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="3" />
                    <img class="avatar-icon" src="~/img/icons/avatar4.png" alts="" />
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info btn-block">Submit</button>
            </div>

        </form>
        

    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
