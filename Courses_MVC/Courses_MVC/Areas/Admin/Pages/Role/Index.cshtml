@page "/admin/roles/"
@model Courses_MVC.Areas.Admin.Pages.Role.IndexModel
@{
    ViewData["Title"] = "Danh sách các roles ";
}
<h2 class="text-center" style="padding-top:50px">LIST OF ROLES</h2>
<partial name="_StatusMessage" model="@Model.StatusMassage" />
<div class="row justify-content-around">
    <a class="btn btn-outline-success" asp-page="./Create">Add role</a>
    <a class="btn btn-outline-success" asp-page="../User/Index">Manage members</a>
</div>
<div class="table-overflow" style="width: 800px; margin: 0 auto; padding-top:20px">
    <table class="table table-hover">
        <tr>
            <th>
                Name of role
            </th>
            <th>Action</th>
        </tr>
        @foreach (var role in Model.roles)
        {
            <tr>
                <td>
                    @role.Name <br />
                    @foreach (var claim in role.Claims)
                    {
                        <small>@claim</small><br />
                    }
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-roleid="@role.Id">Update</a>
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-roleid="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

