@model Courses_MVC.Models.Topic
@{
    ViewData["Title"] = "Cập nhập chủ đề";
}

<div class="main">
    <partial name="_NavBar" />
    <div class="col-md-8">
        <partial name="_AlertMessage" />
        <h2 class="contact-title text-center" style="padding-top:30px">EDIT TOPIC</h2>
        <form asp-action="CapNhatTopic" class="col-md-10 offset-md-2 mt-5" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="topicId" class="control-label"></label>
                <input asp-for="topicId" class="form-control" disabled />
            </div>
            <div class="form-group mt-3">
                <label asp-for="topicName" class="control-label"></label>
                <input asp-for="topicName" class="form-control" />
            </div>
            <div class="form-row mb-4">
                <div class="form-group col-md-6">
                    <input type="submit" name="submit" value="Update" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="DanhSachTopic" class="btn btn-secondary btn-block">Back</a>
                </div>
            </div>

        </form>
    </div>
</div>

<script>
    const active_lienhe = document.querySelector('#active--chude')

    active_lienhe.classList.add('active--css')
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

