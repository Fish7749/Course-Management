@model Courses_MVC.Models.Discount
@{
    ViewData["Title"] = "Thêm chương trình giảm giá";
}
<div class="main">
    <partial name="_NavBar" />
    <div class="col-md-8">
        <partial name="_AlertMessage" />
        <h2 class="contact-title text-center" style="padding-top:30px">ADD A DISCOUNT</h2>
        <form asp-action="ThemGiamGia" class="col-md-10 offset-md-2 mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="discription" class="control-label"></label>
                <input asp-for="discription" class="form-control" />
                <span asp-validation-for="discription" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="sale" class="control-label"></label>
                <input asp-for="sale" class="form-control" />
                <span asp-validation-for="sale" class="text-danger"></span>
            </div>
            <div class="form-row mb-4">
                <div class="form-group col-md-6">
                    <input type="submit" name="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="DanhSachGiamGia" class="btn btn-secondary btn-block">Back</a>
                </div>
            </div>

        </form>
    </div>
</div>


<script>
    const active_lienhe = document.querySelector('#active--giamgia')

    active_lienhe.classList.add('active--css')
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

